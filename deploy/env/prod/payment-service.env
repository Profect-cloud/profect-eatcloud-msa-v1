# Payment Service - Production Environment
# Database Configuration (AWS RDS)
DB_HOST=your-rds-instance.region.rds.amazonaws.com
DB_PORT=5432
DB_NAME=payment_db
DB_USER=eatcloud_admin
DB_PASSWORD=your-secure-production-password
DB_SSL_MODE=require

# Redis Configuration (AWS ElastiCache)
REDIS_HOST=your-elasticache-cluster.region.cache.amazonaws.com
REDIS_PORT=6379
REDIS_SSL=true

# Service Configuration
SERVICE_NAME=payment-service
SERVICE_PORT=8084
MANAGEMENT_PORT=9084

# Eureka Configuration
EUREKA_CLIENT_SERVICE_URL_DEFAULTZONE=http://eureka-server:8761/eureka
EUREKA_INSTANCE_PREFER_IP_ADDRESS=true
EUREKA_INSTANCE_LEASE_RENEWAL_INTERVAL=10
EUREKA_INSTANCE_LEASE_EXPIRATION_DURATION=30

# Logging
LOGGING_LEVEL_ROOT=WARN
LOGGING_LEVEL_COM_EATCLOUD=INFO
LOGGING_APPENDER=STDOUT

# Payment Gateway Integration
PG_API_URL=https://api.payment-gateway.com
PG_API_KEY=your-payment-gateway-api-key
PG_SECRET_KEY=your-payment-gateway-secret-key
PG_WEBHOOK_SECRET=your-webhook-secret

# Security
ENCRYPTION_KEY=your-payment-encryption-key
PCI_COMPLIANCE_MODE=true

# Monitoring
METRICS_ENABLED=true
HEALTH_CHECK_PATH=/actuator/health
TRANSACTION_MONITORING=true
