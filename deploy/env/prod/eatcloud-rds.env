# EatCloud RDS Configuration - Production Environment
# AWS RDS PostgreSQL Instance

# RDS Connection Details
# Replace these values with your actual AWS RDS endpoint and credentials
DB_HOST=your-rds-instance.region.rds.amazonaws.com
DB_PORT=5432
DB_NAME=eatcloud_db
DB_USER=eatcloud_admin
DB_PASSWORD=your-secure-production-password

# SSL Configuration
DB_SSL_MODE=require
DB_SSL_CERT_PATH=/opt/ssl/rds-ca-2019-root.pem

# Connection Pool Settings for Production
DB_INITIAL_SIZE=10
DB_MAX_ACTIVE=50
DB_MAX_IDLE=20
DB_MIN_IDLE=10
DB_MAX_WAIT=30000
DB_VALIDATION_QUERY=SELECT 1

# Multiple databases in RDS
# Note: These should be created manually in RDS or via migration scripts
USER_DB_NAME=user_db
STORE_DB_NAME=store_db
ORDER_DB_NAME=order_db
PAYMENT_DB_NAME=payment_db

# Monitoring and Health Check
DB_HEALTH_CHECK_TIMEOUT=10
DB_CONNECTION_TIMEOUT=30
DB_SOCKET_TIMEOUT=60
