# Store & Menu Service Development Configuration

# Database Configuration
POSTGRES_PASSWORD=cloud123
DB_HOST=store-db
DB_PORT=5432
DB_NAME=store_db
DB_USER=user
DB_PASSWORD=cloud123

# PostGIS Configuration
POSTGIS_ENABLE_OUTDB_RASTERS=1
POSTGIS_GDAL_ENABLED_DRIVERS=ENABLE_ALL

# Redis Configuration
REDIS_HOST=redis
REDIS_PORT=6379
REDIS_PASSWORD=
REDIS_DATABASE=1
REDIS_TIMEOUT=2000

# Service Configuration
SERVER_PORT=8080
SERVICE_NAME=store-service

# File Upload Configuration
FILE_UPLOAD_MAX_SIZE=10MB
FILE_UPLOAD_MAX_REQUEST_SIZE=50MB
FILE_UPLOAD_PATH=/tmp/uploads
IMAGE_STORAGE_PATH=/tmp/images
ALLOWED_FILE_EXTENSIONS=jpg,jpeg,png,gif,webp

# Geolocation Configuration
GEO_DEFAULT_RADIUS=5000
GEO_MAX_RADIUS=50000
GEO_DISTANCE_UNIT=meters

# Search Configuration
SEARCH_MIN_LENGTH=2
SEARCH_MAX_RESULTS=100
SEARCH_DEFAULT_PAGE_SIZE=20

# Cache Configuration
CACHE_ENABLED=true
CACHE_TTL_MINUTES=10
CACHE_STORE_LIST_TTL=5
CACHE_MENU_TTL=30

# Business Hours Validation
BUSINESS_HOURS_VALIDATION_ENABLED=true
ORDER_CUTOFF_MINUTES=30

# Logging
LOG_LEVEL=DEBUG
LOG_SQL=true
SHOW_SQL=true

# Development Features
SPRING_JPA_HIBERNATE_DDL_AUTO=update
SPRING_JPA_SHOW_SQL=true
SPRING_JPA_PROPERTIES_HIBERNATE_FORMAT_SQL=true
SPRING_JPA_PROPERTIES_HIBERNATE_SPATIAL_ENABLED=true

# Actuator
MANAGEMENT_ENDPOINTS_WEB_EXPOSURE_INCLUDE=*
MANAGEMENT_ENDPOINT_HEALTH_SHOW_DETAILS=always

# Mock Data Generation (Dev only)
MOCK_DATA_ENABLED=true
MOCK_DATA_STORE_COUNT=50
MOCK_DATA_MENU_ITEMS_PER_STORE=20
